
<% include ./partials/boilerplate.ejs %>



<div class="container">
  <h1>Add A New To-Do!</h1>
  <form action="/allToDo" method="POST" accept-charset="utf-8">
    <input name="chore" placeholder="chore">
    <input name="description" placeholder="description">
    <input name="status" placeholder="status">
    <input type="submit" value="submit this">
  </form>
</div>

<% allData.forEach((todo) => { %>
<div class="container">
    <hr>
 <%= todo.chore %>
 <a href="/allToDo/<%= todo.id%>">Click here to edit!</a>
             <form method="POST" action="/allToDo/<%= todo.id %>?_method=DELETE">
              <button type="submit">Delete!</button>
            </form>

     <hr>
 <br />
      <hr>
<div class="container">
 <%= todo.description %>
  </div>
      <hr>
  <br />
     <hr>
<div class="container">
<%= todo.status %>
  </div>
  <hr>
   <br />

</div>

<% }) %>




<%= allData.chore %>








<% include ./partials/end.ejs %>
